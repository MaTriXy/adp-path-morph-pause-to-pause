<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  android:padding="16dp">

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1">

    <RelativeLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerInParent="true">

      <ImageView
        android:id="@+id/alarm"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:background="?attr/selectableItemBackground"
        android:contentDescription="@null"
        android:padding="4dp"
        android:scaleType="fitCenter"
        android:src="@drawable/avd_tab_alarm"/>

      <ImageView
        android:id="@+id/clock"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_alignTop="@id/alarm"
        android:layout_centerInParent="true"
        android:layout_toEndOf="@id/alarm"
        android:layout_toRightOf="@id/alarm"
        android:background="?attr/selectableItemBackground"
        android:contentDescription="@null"
        android:padding="4dp"
        android:scaleType="fitCenter"
        android:src="@drawable/avd_tab_clock"/>

      <ImageView
        android:id="@+id/timer"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_alignLeft="@id/alarm"
        android:layout_alignStart="@id/alarm"
        android:layout_below="@id/alarm"
        android:layout_centerInParent="true"
        android:background="?attr/selectableItemBackground"
        android:contentDescription="@null"
        android:padding="4dp"
        android:scaleType="fitCenter"
        android:src="@drawable/avd_tab_timer"/>

      <ImageView
        android:id="@+id/stopwatch"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_alignTop="@id/timer"
        android:layout_centerInParent="true"
        android:layout_toEndOf="@id/timer"
        android:layout_toRightOf="@id/timer"
        android:background="?attr/selectableItemBackground"
        android:contentDescription="@null"
        android:padding="4dp"
        android:scaleType="fitCenter"
        android:src="@drawable/avd_tab_stopwatch"/>

    </RelativeLayout>
  </RelativeLayout>

  <Button
    android:id="@+id/button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:text="@string/click"/>

</LinearLayout>