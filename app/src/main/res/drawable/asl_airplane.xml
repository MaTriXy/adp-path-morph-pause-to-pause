<?xml version="1.0" encoding="utf-8"?>
<animated-selector
  xmlns:android="http://schemas.android.com/apk/res/android">

  <item
    android:id="@+id/disable"
    android:drawable="@drawable/vd_airplane_disabled"
    android:state_enabled="false"/>

  <item
    android:id="@+id/enable"
    android:drawable="@drawable/vd_airplane_enabled"/>

  <transition
    android:drawable="@drawable/avd_airplane_disable_to_enable"
    android:fromId="@id/disable"
    android:toId="@id/enable"/>

  <transition
    android:drawable="@drawable/avd_airplane_enable_to_disable"
    android:fromId="@id/enable"
    android:toId="@id/disable"/>

</animated-selector>