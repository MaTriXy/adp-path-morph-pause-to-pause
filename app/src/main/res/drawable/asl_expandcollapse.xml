<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">

  <item
    android:id="@+id/expanded"
    android:drawable="@drawable/vd_expandcollapse_collapse"
    android:state_expanded="true"/>

  <item
    android:id="@+id/collapsed"
    android:drawable="@drawable/vd_expandcollapse_expand"/>

  <transition
    android:drawable="@drawable/avd_expandcollapse_expand"
    android:fromId="@id/collapsed"
    android:toId="@id/expanded"/>

  <transition
    android:drawable="@drawable/avd_expandcollapse_collapse"
    android:fromId="@id/expanded"
    android:toId="@id/collapsed"/>

</animated-selector>