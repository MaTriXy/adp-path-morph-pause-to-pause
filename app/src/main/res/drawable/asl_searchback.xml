<?xml version="1.0" encoding="utf-8"?>
<animated-selector
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <item
    android:id="@+id/back"
    android:drawable="@drawable/vd_back"
    app:state_searching="true"/>

  <item
    android:id="@+id/search"
    android:drawable="@drawable/vd_search"/>

  <transition
    android:drawable="@drawable/avd_search_to_back"
    android:fromId="@id/search"
    android:toId="@id/back"/>

  <transition
    android:drawable="@drawable/avd_back_to_search"
    android:fromId="@id/back"
    android:toId="@id/search"/>

</animated-selector>