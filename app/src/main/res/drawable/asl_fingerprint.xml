<?xml version="1.0" encoding="utf-8"?>
<animated-selector
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <item
    android:id="@+id/error"
    android:drawable="@drawable/lockscreen_fingerprint_fp_to_error_state"
    app:state_error="true"/>

  <item
    android:id="@+id/on"
    android:drawable="@drawable/lockscreen_fingerprint_draw_on"
    app:state_on="true"/>

  <item
    android:id="@+id/off"
    android:drawable="@drawable/lockscreen_fingerprint_draw_off"/>

  <transition
    android:drawable="@drawable/lockscreen_fingerprint_draw_on_animation"
    android:fromId="@id/off"
    android:toId="@id/on"/>

  <transition
    android:drawable="@drawable/lockscreen_fingerprint_draw_off_animation"
    android:fromId="@id/on"
    android:toId="@id/off"/>

  <transition
    android:drawable="@drawable/lockscreen_fingerprint_fp_to_error_state_animation"
    android:fromId="@id/on"
    android:toId="@id/error"/>

  <transition
    android:drawable="@drawable/lockscreen_fingerprint_error_state_to_fp_animation"
    android:fromId="@id/error"
    android:toId="@id/on"/>

</animated-selector>