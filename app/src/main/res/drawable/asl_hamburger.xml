<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">

  <item
    android:id="@+id/back"
    android:drawable="@drawable/vd_drawer_arrow"
    android:state_checked="true"/>

  <item
    android:id="@+id/hamburger"
    android:drawable="@drawable/vd_drawer_hamburger"/>

  <transition
    android:drawable="@drawable/avd_drawer_hamburger_to_arrow"
    android:fromId="@id/hamburger"
    android:toId="@id/back"/>

  <transition
    android:drawable="@drawable/avd_drawer_arrow_to_hamburger"
    android:fromId="@id/back"
    android:toId="@id/hamburger"/>

</animated-selector>