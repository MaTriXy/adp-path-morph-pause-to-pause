<animated-vector
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:aapt="http://schemas.android.com/aapt"
  android:drawable="@drawable/vd_airplane_enabled">

  <target android:name="root">
    <aapt:attr name="android:animation">
      <objectAnimator
        android:duration="350"
        android:interpolator="@android:interpolator/fast_out_slow_in"
        android:propertyName="alpha"
        android:valueFrom="1.0"
        android:valueTo="0.3"/>
    </aapt:attr>
  </target>

  <target android:name="maskClipPath">
    <aapt:attr name="android:animation">
      <objectAnimator
        android:duration="350"
        android:interpolator="@android:interpolator/fast_out_slow_in"
        android:propertyName="pathData"
        android:valueFrom="@string/airplane_mask_clip_path_enabled"
        android:valueTo="@string/airplane_mask_clip_path_disabled"
        android:valueType="pathType"/>
    </aapt:attr>
  </target>

  <target android:name="crossPath">
    <aapt:attr name="android:animation">
      <set android:ordering="sequentially">
        <objectAnimator
          android:duration="17"
          android:propertyName="strokeAlpha"
          android:valueFrom="0"
          android:valueTo="1"/>
        <objectAnimator
          android:duration="333"
          android:interpolator="@anim/airplane_disable_cross_1"
          android:propertyName="pathData"
          android:valueFrom="@string/airplane_cross_path_enabled"
          android:valueTo="@string/airplane_cross_path_disabled"
          android:valueType="pathType"/>
      </set>
    </aapt:attr>
  </target>

</animated-vector>